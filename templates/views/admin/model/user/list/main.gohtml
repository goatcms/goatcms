{{- define "content" -}}

<h1>User</h1>

{{ if eq (len .Data.Collection) 0 -}}
No data to show
{{- else }}
  <table>
    <thead>
      <tr>
        <th>Email</th>
        <th>Login</th>
        <th>Firstname</th>
        <th>Password</th>
      </tr>
    </thead>
    <tbody>{{- range $i, $user := .Data.Collection }}
      <tr>
        <td>{{- $user.Email -}}</td>
        <td>{{- $user.Login -}}</td>
        <td>{{- $user.Firstname -}}</td>
        <td>{{- $user.Password -}}</td>
      <tr>
    {{- end }}
  </tbody>
</table>
{{- end }}


{{- end }}