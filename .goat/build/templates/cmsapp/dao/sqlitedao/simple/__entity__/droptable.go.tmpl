{{- $ctx := . -}}
{{- $entity := $ctx.DotData -}}
{{- $typeName := print $entity.Name.CamelCaseUF "DropTable" -}}

package simple

import (
	"github.com/goatcms/goatcore/app"
	"database/sql"
	"github.com/goatcms/goatcore/dependency"
	"github.com/goatcms/goatcms/cmsapp/dao/sqlitedao/helpers"
	"github.com/goatcms/goatcms/cmsapp/dao"
)

// {{$typeName}} is a Data Access Object for {{lower $name}} entity
type {{$typeName}} struct {
  deps struct{
    DB *sql.DB `dependency:"db0.engine"`
		EngineScope app.Scope `dependency:"EngineScope"`
  }
}

func New{{$typeName}}(di dependency.Injector) (*{{$typeName}}, error) {
  instance := &{{$typeName}}{}
  if err := di.InjectTo(&instance.deps); err != nil {
    return nil, err
  }
  return instance, nil
}

func {{$typeName}}Factory(dp dependency.Provider) (interface{}, error) {
	instance, err := New{{$typeName}}(dp)
	if err != nil {
		return nil, err
	}
	return dao.DropTable(instance), nil
}

func (deleter {{$typeName}}) DropTable(scope app.Scope) (err error) {
	var tx *sql.Tx
	if tx, err = helpers.TX(scope, deleter.deps.DB); err != nil {
		return err
	}
	if _, err = tx.Exec(deleter.SQL()); err != nil {
		return err
	}
	scope.On(app.AfterCommitEvent, func(interface{}) (err error) {
		return deleter.deps.EngineScope.Trigger(dao.{{$typeName}}Event, nil)
	})
	return nil
}

func (deleter {{$typeName}}) SQL() string {
  return `DROP TABLE IF EXISTS {{camelcaseuf $name}} `
}

{{- end -}}
