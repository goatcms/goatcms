{{- define "sqlite.dao.query.main" -}}
  {{- $ctx := . -}}

  {{- range $mi, $modelkey := (keys $ctx.Data "model.") -}}
    {{- $modelName := (index $ctx.Data (print "model." $modelkey ".entity")) -}}

    {{/* Main test */}}
    {{- $mainTestPath := (print $ctx.To "/sqlitedao/dao/" $modelName "/queries/main_test.go") -}}
    {{- if not ($ctx.Filesystem.IsFile $mainTestPath) -}}
      {{- $ctx.Out.File $mainTestPath -}}
        {{- template "sqlite.dao.query.main_test" (ctx $ctx (print "model." $modelkey) "") -}}
      {{- $ctx.Out.EOF -}}
    {{- end -}}

    {{/* Module */}}
    {{- $modulePath := (print $ctx.To "/sqlitedao/dao/" $modelName "/queries/module.go") -}}
    {{- if not ($ctx.Filesystem.IsFile $modulePath) -}}
      {{- $ctx.Out.File $modulePath -}}
        {{- template "sqlite.dao.query.module" (ctx $ctx (print "model." $modelkey) "") -}}
      {{- $ctx.Out.EOF -}}
    {{- end -}}

    {{- range $qi, $querykey := (keys $ctx.Data "query.") -}}
      {{- $queryModel := (index $ctx.Data (print "query." $querykey ".model")) -}}

      {{- if eq $modelName $queryModel -}}
        {{- $path := (print $ctx.To "/sqlitedao/dao/" $modelName "/queries/" $querykey ".go") -}}
        {{- if not ($ctx.Filesystem.IsFile $path) -}}
          {{- $ctx.Out.File $path -}}
            {{- template "sqlite.dao.query.body" (ctx $ctx (print "query." $querykey) "") -}}
          {{- $ctx.Out.EOF -}}
        {{- end -}}

        {{- $testPath := (print $ctx.To "/sqlitedao/dao/" $modelName "/queries/" $querykey "_story_test.go") -}}
        {{- if not ($ctx.Filesystem.IsFile $testPath) -}}
          {{- $ctx.Out.File $testPath -}}
            {{- template "sqlite.dao.query.body_test" (ctx $ctx (print "query." $querykey) "") -}}
          {{- $ctx.Out.EOF -}}
        {{- end -}}
      {{- end -}}

    {{- end -}}
  {{- end -}}

{{- end -}}
